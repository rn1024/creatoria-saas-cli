# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api

# Database
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_DATABASE=creatoria

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# RabbitMQ
RABBITMQ_URL=amqp://localhost:5672

# JWT
JWT_SECRET=your-secret-key-change-this
JWT_EXPIRES_IN=7d

# Modules
MODULES_SOURCE=github:creatoria/creatoria-saas-modules
MODULES_VERSION=latest
ENABLED_MODULES=system,crm,erp,mall,bpm,ai

# Swagger
SWAGGER_ENABLED=true
SWAGGER_TITLE=Creatoria SaaS API
SWAGGER_DESCRIPTION=The Creatoria SaaS API documentation
SWAGGER_VERSION=1.0.0
SWAGGER_PATH=api-docs

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Multi-tenant
MULTI_TENANT_ENABLED=true
DEFAULT_TENANT_ID=default